<%- include('partials/header') %>

<h2>Search Results</h2>
<ul>
  <% products.forEach(product => { %>
    <li>
      <h3><%= product.title %></h3>
      <img src="<%= product.image%>" onerror="setDefaultImage(event)" alt="<%= product.title %>" />
      <button onclick="addToCart('<%= product.title %>', '<%= product.image %>')">Add to Cart</button>
    </li>
  <% }) %>
</ul>

<a href="/cart">View Cart</a>

<%-include ('partials/footer') %>

